{
	"trailingComma": "all",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"printWidth": 80,
	"endOfLine": "lf",
	"proseWrap": "always",
	"htmlWhitespaceSensitivity": "ignore",
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderCaseInsensitive": true,
	"typeImports": true,
	"importOrderParserPlugins": [
		"classProperties",
		"decorators-legacy",
		"typescript",
		"topLevelAwait",
		"privateIn"
	],
	"importOrder": [
		".*(@nest.*|@prisma/client|apollo|express|^\\w).*",

		".*\\.module$|.*modules",
		".*\\.service$",
		".*(resolver|controller).*",

		".*(dto|input|response|union).*",

		".*(decorator|guard).*",

		"^@/core/(.*)$",
		"^@/shared/(.*)$",
		".*(common).*",

		".*(type|Types?|types).*",

		"^\\.\\/.*$"
	],
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
